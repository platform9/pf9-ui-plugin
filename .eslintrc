{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "jquery": true,
    "cypress/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "plugins": ["import", "react", "cypress", "@typescript-eslint/eslint-plugin"],
  "extends": [
    "standard",
    "standard-with-typescript",
    "standard-react",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint"
  ],

  "rules": {
    "max-len": ["warn", { "code": 100, "tabWidth": 2 }],
    "semi": ["error", "never"],
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline",
        "imports": "only-multiline",
        "exports": "only-multiline",
        "functions": "only-multiline"
      }
    ],
    "jsx-quotes": 0,
    "react/prop-types": 0,
    "react/no-unused-prop-types": "warn",
    "no-new": 0,
    "space-infix-ops": 0,
    "no-prototype-builtins": 0,
    "space-before-function-paren": "off",

    // Allow for "table" alignment, ex:
    // { id: 'name',       type: 'string' }
    // { id: 'longerName', type: 'string' }
    "no-multi-spaces": [2, { "exceptions": { "ObjectExpression": true } }],
    "key-spacing": [2, { "mode": "minimum" }],
    "standard/no-callback-literal": 0,
    "@typescript-eslint/strict-boolean-expressions": "off",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-floating-promises": "off",
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "semi",
          "requireLast": false
        }
      }
    ]
  },

  "settings": {
    "import/parser": "babel-eslint",
    "react": {
      "version": "16.9" // React version, default to the latest React stable release
    }
  },

  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./tsconfig.json"
      }
    }
  ]
}
