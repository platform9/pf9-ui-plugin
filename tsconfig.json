{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es2017",
    "baseUrl": ".",
    "module": "commonjs",
    "jsx": "react",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "include": ["./src/**/*"]
  }
}
